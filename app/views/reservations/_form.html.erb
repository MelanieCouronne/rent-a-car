<div class="container-form">
  <div class="row justify-content-center align-items-center">
    <div class="col-xs-12 col-sm-8 col-md-6">
      <div>
        <h1>How many seats do you which to book?</h1>
      </div>
        <%= simple_form_for([ride, reservation]) do |f| %>
          <div>
            <div class="col-12">
              <%= f.input :reservation_passengers, label: 'Number of passengers', placeholder: '2' %>
            </div>
          </div>
          <div class="col-12 mt-4 d-flex justify-content-between align-items-center">
          <%= f.button :submit, 'Book', class: 'btn btn-outline-dark detail' %>
        <% end %>
      <%= link_to "Back to home page", rides_path, :class => "link-to" %>
      </div>
    </div>
  </div>
</div>
